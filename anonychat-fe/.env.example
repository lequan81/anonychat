# Frontend Environment Variables for AnonyChat
# Copy this file to .env and adjust values as needed

# WebSocket Configuration
VITE_WEBSOCKET_URL=ws://localhost:3000     # WebSocket server URL
VITE_WS_HEARTBEAT_INTERVAL=25000          # WebSocket heartbeat interval (25 seconds)
VITE_WS_HEARTBEAT_TIMEOUT=35000           # WebSocket heartbeat timeout (35 seconds)
VITE_WS_MAX_ATTEMPTS=20                   # Maximum reconnection attempts
VITE_WS_RETRY_DEBOUNCE=20000              # Debounce time for retry attempts (20 seconds)
VITE_WS_RETRY_WINDOW_MS=60000             # Retry window in milliseconds (1 minute)
VITE_WS_RETRY_DELAY_MS=1000               # Initial retry delay (1 second)
VITE_WS_COOLDOWN_MS=30000                 # Connection cooldown period (30 seconds)

# UI Configuration
VITE_TOAST_DURATION=3000                  # Toast message duration (3 seconds)
VITE_TYPING_TIMEOUT=2000                  # Typing indicator timeout (2 seconds)
VITE_RECONNECT_DELAY=2000                 # Reconnection delay (2 seconds)
VITE_MIN_CONNECTION_DURATION=5000         # Minimum connection duration (5 seconds)
VITE_MAX_RECONNECT_DELAY=10000            # Maximum reconnection delay (10 seconds)
VITE_RECONNECT_JITTER=1200                # Reconnection jitter (1.2 seconds)

# Rate Limiting
VITE_MSG_RATE_LIMIT=100                   # Message rate limit interval (100ms)

# Application Configuration
VITE_APP_NAME="AnonyChat"                 # Application name
VITE_APP_VERSION="1.0.0"                  # Application version
VITE_COPYRIGHT_YEAR=2025                  # Copyright year
VITE_PRELOAD_DELAY=50                    # Component preload delay (50ms)
